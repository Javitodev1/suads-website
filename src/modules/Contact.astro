---
import { Badge, ContactForm, Container, Text } from '@/components'

export interface Props {
  id?: string
  badge?: string
  title?: string
  body?: string
}

const { id, badge, title, body } = Astro.props
---

<Container
  id={id}
  containerClass='flex gap-12 flex-wrap'>
  <div class="max-w-2xl space-y-6">
    <Badge innerHtml={badge} />
    <Text
      tag={'h2'}
      variant={'banner'}
      color={'textGradient'}
      innerHTML={title}
    />
    <Text innerHTML={body} />
  </div>

  <div class="grow">
    <ContactForm client:visible="svelte"/>
  </div>
</Container>
