---
import { Features, type IFeatures } from '@/modules'
import { Contact, type IContact } from '@/modules'

import * as Modules from './modules'

export interface Props {
  contact?: IContact
  features?: IFeatures
  hero?: Modules.IHero
  howWork?: Modules.IHowWork
  portfolio?: Modules.IPortfolio
  whyUs?: IFeatures
}

const { features, hero, howWork, portfolio, whyUs, contact } = Astro.props
---

{
  hero && (
    <Modules.Hero
      id='hero'
      {...hero}
    />
  )
}

{
  features && (
    <Features
      id='features'
      {...features}
    />
  )
}

{
  howWork && (
    <Modules.HowWork
      id='how-works'
      {...howWork}
    />
  )
}

{
  whyUs && (
    <Features
      id='why-us'
      {...whyUs}
    />
  )
}

{
  portfolio && (
    <Modules.Portfolio
      id='portfolio'
      {...portfolio}
    />
  )
}

{
  contact && (
    <Contact
      id='contact'
      {...contact}
    />
  )
}
