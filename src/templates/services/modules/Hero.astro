---
import Container from '@/components/Container.astro'
import Text from '@/components/Text.astro'

export interface Props {
  title?: string
  body?: string
  id?: string
}

const { props } = Astro
---

<Container id={props.id}>
  <div class='max-w-4xl mt-6 mb-12'>
    <Text
      tag={'h1'}
      variant={'banner'}
      color={'textGradient'}
      class='mb-4'>
      <slot name='title'><Fragment set:html={props.title} /></slot>
    </Text>
    <Text
      tag={'p'}
      variant={'body'}>
      <slot name='body'><Fragment set:html={props.body} /></slot>
    </Text>
  </div>
</Container>
