---
import Container from '@/components/Container.astro'
import Text from '@/components/Text.astro'
import StatCard from '@/components/StatCard.astro'

import type { ICard } from '@/types/content'

export interface Props {
  title?: string
  cards?: ICard[]
  id?: string
  image: ImageMetadata
}

const { title, id, image, cards = [] } = Astro.props
---

<Container
  id={id}
  class='relative'
  containerClass='relative'>
  <div
    slot='before'
    class='absolute top-0 right-0'>
    <img
      src={image.src}
      alt=''
    />
  </div>

  <div class='max-w-3xl'>
    <Text
      tag={'h2'}
      variant={'title'}>
      <slot name='title'><Fragment set:html={title} /></slot>
    </Text>

    <div class='mt-24 grid grid-cols-2 grid-rows-2 gap-24'>
      {cards.map((props) => <StatCard {...props} />)}
    </div>
  </div>
</Container>
