---
import Container from '@/components/Container.astro'
import Text from '@/components/Text.astro'
import Button from '@/components/Button.astro'
import Glow from '@/components/Glow.astro'

import type { ImageMetadata } from 'astro'

export interface Props {
  title?: string
  body?: string
  cta?: string
  id?: string
  href?: string
  image: ImageMetadata
}

const { title, body, cta, id, href, image } = Astro.props
---

<Container
  id={id}
  class='relative'
  variant={'none'}>
  <div class='flex justify-center items-center relative'>
    <Glow class='absolute top-1/4 -translate-y-8 left-1/3 translate-x-6' />

    <img
      src={image.src}
      alt='Suads Marketing Suit Tools'
      width={1215}
      height={1082}
      class='-translate-y-20 relative'
    />
  </div>

  <div
    class='flex flex-col items-center text-center max-w-2xl mx-auto gap-6 md:-mt-80 md:-translate-y-8'>
    <Text
      class='max-w-lg'
      tag={'h2'}
      variant={'title'}>
      <slot name='title'><Fragment set:html={title} /></slot>
    </Text>

    <Text
      tag={'p'}
      variant={'body'}>
      <slot name='body'><Fragment set:html={body} /></slot>
    </Text>

    <Button href={href}
      ><slot name='cta'><Fragment set:html={cta} /></slot></Button
    >
  </div>
</Container>
