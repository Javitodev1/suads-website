---
import DefaultHero from '@/modules/Hero.astro'
import type { IHero } from '@/modules'

export interface Props extends IHero {
  bgDesktop: ImageMetadata
  bgMobile: ImageMetadata
}

const { bgDesktop, bgMobile } = Astro.props
---

<DefaultHero {...Astro.props}>
  <div
    class='absolute top-0 left-0 size-full'
    slot='before'>
    <picture>
      <source
        media='(max-width: 640px)'
        srcset={bgMobile.src}
      />
      <img
        src={bgDesktop.src}
        alt='Suads background rocket image'
        class='object-center object-cover size-full mask-fade'
      />
    </picture>
  </div>
</DefaultHero>

<style>
  .mask-fade {
    mask-image: linear-gradient(to bottom, black 90%, transparent 100%);
    mask-repeat: no-repeat;
    mask-size: 100% 100%;

    /* For better browser support */
    -webkit-mask-image: linear-gradient(to bottom, black 90%, transparent 100%);
    -webkit-mask-repeat: no-repeat;
    -webkit-mask-size: 100% 100%;
  }
</style>
