---
import Text from '@/components/Text.astro'
import Badge from '@/components/Badge.astro'
import Button from '@/components/Button.astro'
import Container from '@/components/Container.astro'

export interface Props {
  title?: string
  body?: string
  badge_ads?: string
  badge_webdev?: string
  badge_design?: string
  cta?: string
  id?: string
  href?: string
  bgImage?: string
}

const { props } = Astro
---

<Container id={props.id} containerClass='relative z-20 min-h-screen'>
  <picture slot="before">
    <img
      src={props.bgImage}
      alt='rocket suads'
      class='size-full object-center object-cover absolute top-0 left-0'
    />
  </picture>

  <div class='flex gap-6'>
    <Badge
      ><slot name='badge_ads'><Fragment set:html={props.badge_ads} /></slot
      ></Badge
    >
    <Badge
      ><slot name='badge_design'
        ><Fragment set:html={props.badge_design} /></slot
      ></Badge
    >
    <Badge
      ><slot name='badge_webdev'
        ><Fragment set:html={props.badge_webdev} /></slot
      ></Badge
    >
  </div>

  <div class='max-w-4xl mt-6 mb-12'>
    <Text
      variant={'banner'}
      color={'bannerGradient'}
      class='mb-4'>
      <slot name='title'><Fragment set:html={props.title} /></slot>
    </Text>
    <Text
      color={'primary'}
      variant={'bodyBanner'}>
      <slot name='body'><Fragment set:html={props.body} /></slot>
    </Text>
  </div>

  <Button href={props.href}
    ><slot name='cta'><Fragment set:html={props.cta} /></slot></Button
  >
</Container>
