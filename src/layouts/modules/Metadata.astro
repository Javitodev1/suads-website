---
import Logo from '@/assets/logo.svg'

export interface Props {
  title: string;
  description: string;
  keywords?: string;
  author?: string;
  ogImage?: string;
  url?: string;
}

const { title, description, keywords, author, ogImage, url } = Astro.props;
const favicon = Logo.src
---


<title>{title}</title>
<link rel="icon" type="image/x-icon" href={favicon}>
<meta name="theme-color" content="#04060c">

<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<meta name="author" content={author} />

<!-- Open Graph (Used by Instagram & WhatsApp) -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:url" content={url} />
<meta property="og:type" content="website" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />

<!-- Twitter Card -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<!-- Accessibility & Mobile -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta charset="UTF-8" />

<!-- Instagram Optimizations -->
<meta name="theme-color" content="#ffffff" />
<meta property="al:ios:url" content={url} />
<meta property="al:android:url" content={url} />
