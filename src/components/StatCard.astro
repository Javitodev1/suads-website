---
import Text from './Text.astro'

export interface IStatCard {
  title?: string
  body?: string
}

export interface Props extends IStatCard {
  class?: string
}

const { class: className, title, body } = Astro.props
---

<article
  class='flex gap-8'
  class:list={className}>
  <div
    class='w-2 h-full bg-linear-(--gradient-primary) rounded-xs shadow-to-r shadow-white'>
  </div>
  <div class='py-4 space-y-4 w-fit'>
    <Text
      tag={'p'}
      variant={'bigNumber'}
      color={'primary'}>
      <slot name='title'><Fragment set:html={title} /></slot>
    </Text>

    <Text
      tag={'h3'}
      variant={'cardBody'}>
      <slot name='body'><Fragment set:html={body} /></slot>
    </Text>
  </div>
</article>
