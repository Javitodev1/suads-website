---
import Text from './Text.astro'

interface Props {
  title?: string
  body?: string
  class?: string
}

const { class: className = '', title, body } = Astro.props
---

<article class="border-l-8 pl-5 py-4 border-black" class:list={className}>
  <slot name='before' />

  <Text
    tag={'p'}
    variant={'bigNumber'}
    ><slot name='title'><Fragment set:html={title} /></slot></Text
  >
  <Text
    tag={'h3'}
    variant={'cardBody'}
    ><slot name='body'><Fragment set:html={body} /></slot></Text
  >

  <slot name='after' />
</article>
