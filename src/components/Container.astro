---
const containerStyles = {
  normal: 'py-32',
  small: 'py-16',
}

type Variant = keyof typeof containerStyles

export interface Props {
  id?: string
  class?: string
  containerClass?: string
  variant?: Variant
  tag?: 'section' | 'header' | 'footer' | 'div'
}

const { props } = Astro
const { containerClass, tag: Tag = 'section', variant = 'normal' } = props

const style = containerStyles[variant] || containerStyles.normal
---

<Tag
  id={props.id}
  class='bg-primary-1000'
  class:list={[props.class]}>
  <slot name='before' />
  <div
    class='px-4 md:px-0 md:max-w-7xl md:mx-auto'
    class:list={[style, containerClass]}>
    <slot />
  </div>
  <slot name='after' />
</Tag>
