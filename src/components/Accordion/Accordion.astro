---
import type { ICard } from '@/types/content'
import { AccordionContainer, AccordionItem } from './components'

export interface Props {
  cards?: ICard[]
}

const { cards = [] } = Astro.props
---

<AccordionContainer id='accordion'>
  {
    cards.map(({ title = '', body = '' }, index) => (
      <AccordionItem
        title={title}
        body={body}
        name={String(index)}
      />
    ))
  }
</AccordionContainer>

<script src='./libs/accordion.ts'></script>
